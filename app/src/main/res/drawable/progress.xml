<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:id="@android:id/background" 
	    android:drawable="@drawable/progress_background_fill" />
	
	<item android:id="@android:id/progress">
	    <clip>
	        <shape>
			    <gradient 
			        android:startColor="#FF035573" 
			        android:centerColor="#FF0379A1"
			        android:endColor="#FF0097C9" 
			        android:angle="180" />
			
			    <corners android:radius="5px" />
			
			    <stroke 
			            android:width="2dp" 
			            android:color="#50999999" />
			
			    <stroke 
			            android:width="1dp" 
			            android:color="#70555555" />
			</shape>
		</clip>	
	</item>
	
	<item android:id="@android:id/secondaryProgress">
	   <clip>
	        <shape>
			    <gradient 
			        android:startColor="#66035573" 
			        android:centerColor="#660379A1"
			        android:endColor="#660097C9" 
			        android:angle="180" />
			
			    <corners android:radius="5px" />
			
			    <stroke 
			            android:width="2dp" 
			            android:color="#50999999" />
			
			    <stroke 
			            android:width="1dp" 
			            android:color="#70555555" />
			</shape>
		</clip>	
	</item>
	
</layer-list>