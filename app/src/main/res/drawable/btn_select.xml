<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle" >
             <corners android:radius="3dip" />
             <gradient  android:angle="-90" android:startColor="#AA3187a3" android:endColor="#AA1cbae6"  />              
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />        
             <solid  android:color="#005e80"/>
         </shape>
     </item>  
     <item android:state_enabled="false">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />       
             <gradient  android:angle="-90" android:startColor="#443187a3" android:endColor="#441cbae6"  />  
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <gradient android:angle="-90" android:startColor="#3187a3" android:endColor="#1cbae6"  />
         </shape>
     </item>
</selector>